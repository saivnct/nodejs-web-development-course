extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form#login-form.form
                .form__group
                    label.form__label(for='username') Username
                    input#username.form__input(type='username', placeholder='username', required, minlength='3')
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='3')
                .form__group
                    button.btn.btn--green Login



